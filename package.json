{
  "name": "gitsight",
  "displayName": "GitSight",
  "publisher": "fetquest",
  "icon": "images/gitsight_icon.png",
  "description": "Git insights for safe merges, branch comparison, and conflict detection",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhineshaps/gitsight"
  },
  "homepage": "https://github.com/dhineshaps/gitsight",
  "bugs": {
    "url": "https://github.com/dhineshaps/gitsight/issues"
  },
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitsight.checkMerge",
        "category": "gitsight",
        "title": "Check Merge"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
